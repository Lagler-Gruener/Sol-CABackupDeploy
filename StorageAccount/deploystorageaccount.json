{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccounts_straccbackupcapolicy_name": {
            "defaultValue": "straccbackupcapolicy",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "name": "[parameters('storageAccounts_straccbackupcapolicy_name')]",
            "location": "westeurope",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {            
                "supportsHttpsTrafficOnly": true,                
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/tableServices/tables",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('storageAccounts_straccbackupcapolicy_name'), '/default/cabackup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_straccbackupcapolicy_name'))]"
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts/tableServices/tables",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('storageAccounts_straccbackupcapolicy_name'), '/default/cabackupconfiguration')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_straccbackupcapolicy_name'))]"
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts/tableServices/tables",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('storageAccounts_straccbackupcapolicy_name'), '/default/catranslation')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_straccbackupcapolicy_name'))]"
            ]
        }
    ]
}